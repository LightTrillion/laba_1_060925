<Window x:Class="laba_1_060925.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:laba_1_060925"
        mc:Ignorable="d"
        Title="Диспетчер компоновки" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Top">
            <Label Content="Последние документы"/>
            <Button Content="Открыть" Margin="0, 5, 0, 0"/>
            <Button Content="Сохранить" Margin="5, 5, 5, 0"/>
            <Button Content="Закрыть" Margin="0, 5, 5, 0"/>
            <Button Content="Обработать" Margin="0, 5, 5, 0"/>
            <Button Content="О программе" Margin="0, 5, 0, 0"/>
        </StackPanel>
        <Grid Margin="130, 30, 0, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="1.txt" FontWeight="Bold" Grid.Row="0" Grid.Column="0"/>
            <Label Content="2.txt" Grid.Row="0" Grid.Column="1"/>
            <Label Content="3.txt" Grid.Row="0" Grid.Column="2"/>
        </Grid>
        <WrapPanel Margin="130, 50, 0, 0">
            <Button Width="60" Height="70" Margin="10" Background="Yellow" Content="A" BorderBrush="Yellow"/>
            <Button Width="60" Height="70" Margin="10" Background="Red" Content="B" BorderBrush="Red"/>
            <Button Width="60" Height="70" Margin="10" Background="Green" Content="C" BorderBrush="Green"/>
            <Button Width="60" Height="70" Margin="10" Background="Blue"  Content="D" BorderBrush="Blue"/>
            <Button Width="60" Height="70" Margin="10" Background="Gray" Content="E" BorderBrush="Gray"/>
            <Button Width="60" Height="70" Margin="10" Background="Beige" Content="F" BorderBrush="Beige"/>
        </WrapPanel>
        <StackPanel HorizontalAlignment="Left" Orientation="Vertical" Margin="0, 25, 0, 0">
            <Label Content="1.txt" Margin="0, 0, 0, 0"/>
            <Label Content="2.txt" Margin="0, 0, 0, 0"/>
            <Label Content="3.txt" Margin="0, 0, 0, 0"/>
            <Label Content="4.txt" Margin="0, 0, 0, 0"/>
            <Label Content="5.txt" Margin="0, 0, 0, 0"/>
            <Label Content="6.txt" Margin="0, 0, 0, 0"/>
        </StackPanel>
    </Grid>
</Window>
